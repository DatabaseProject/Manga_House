<%= content_for :title do %>
	Manga House: Manga Information
<% end %>

<div class="container">

	<div class="my_header">
		<h1><%= @data[:title] %></h1>
	</div>

	<div class="panel-body panel-defaul col-md-10 col-md-offset-1">

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><%= @data[:title] %></h3>
			</div>
			<div class="panel-body">


				<form class="form-horizontal col-md-9" role="form">
					<div class="form-group">
						<label class="col-md-3 control-label">Artist</label>
						<div class="col-md-9">
							<p type="text" class="control-label" style="text-align: left;" > <a href="/artist/<%= @data[:artist_id] %>"><%= @data[:artist] %></a> </p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">Author </label>
						<div class="col-md-9">
							<p type="text" class="control-label" style="text-align: left;" > <a href="/author/<%= @data[:author_id] %>"><%= @data[:author] %></a></p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">Genre</label>
						<div class="col-md-9">
							<p type="text" class="control-label" style="text-align: left;" > 
							<ul>
								<% @genre.each do |g| %>
									<li><%= g.to_s %></li>
								<% end %>
							</ul>
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-3 control-label">Complete</label>
						<div class="col-md-9">
							<p type="text" class="control-label" style="text-align: left;" > <%= @data[:completeness] %> </p>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-3 control-label">description</label>
						<div class="col-md-9">
							<p type="text" class="control-label" style="text-align: left;" ><%= @data[:description] %></p>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-3 control-label">Release History</label>
						<div class="col-md-9">

							<table class="table table-condensed col-md-12">

								<thead>
									<tr>
										<th>Date</th>
										<th>Chapter</th> 
										<th>Manga Title</th> 
									</tr> 
								</thead>
								<tbody>

									<% @released_chapter.each do |ch| %>
										<tr> 
											<td><%= ch[:date] %></td> 
											<td><%= ch[:chapter] %></td> 
											<td><%= ch[:manga_name] %></td>
										</tr> 
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</form>

				<div class="col-md-3">
					<img src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/c64.64.801.801/s160x160/1005183_10201665277297987_1641864171_n.jpg" class="img-responsive"  alt="profile_pic"/>
				</div>

			</div>
		</div>
	</div>


		</div><!-- /.container -->
