<%= content_for :title do %>
	Manga House: Create Mange
<% end %>
<div class="container">

	<div class="my_header">
		<h1>Manga!</h1>
	</div>


	<form action="/mangas" method="post" class="form-horizontal" role="form">
		<div class="form-group">
			<label for="input_name" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input name="input_name" type="text" class="form-control" id="input_name" placeholder="Name">
			</div>
		</div>
		<div class="form-group">
			<label for="input_description" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-10">
				<textarea name="input_description" id="input_description" class="form-control" rows="3" placeholder="Description" ></textarea>
				<%#<input type="text" class="form-control" id="input_description" placeholder="Description">%>
			</div>
		</div>

		<div class="form-group">
			<label for="input_image_directory" class="col-sm-2 control-label">Image Directory</label>
			<div class="col-sm-10">
				<input type="text" name="input_image_directory" class="form-control" id="input_image_directory" placeholder="Image Directory">
			</div>
		</div>


		<div class="form-group">
			<label for="select_artist" class="col-sm-2 control-label">Artist</label>
			<div class="col-sm-10">
				<%#<input type="text" class="form-control" id="input_image_directory" placeholder="Image Directory">%>
				<select name="select_artist" id = "select_artist" name = "select_artist" class="form-control">
					<% @artists.each do |artist| %>
						<option><%= artist[:name] %></option>
					<% end %>
				</select>
			</div>
		</div>


		<div class="form-group">
			<label for="select_author" class="col-sm-2 control-label">Author</label>
			<div class="col-sm-10">
				<%#<input type="text" class="form-control" id="input_image_directory" placeholder="Image Directory">%>
				<select name="select_author" id = "select_author" name = "select_author" class="form-control">
					<% @authors.each do |author| %>
						<option><%= author[:name] %></option>
					<% end %>
				</select>
			</div>
		</div>


		<div class="form-group">
			<label for="select_publisher" class="col-sm-2 control-label">Publisher</label>
			<div class="col-sm-10">
				<%#<input type="text" class="form-control" id="input_image_directory" placeholder="Image Directory">%>
				<select name="select_publisher" id = "select_publisher" name = "select_publisher" class="form-control">
					<% @publishers.each do |publisher| %>
						<option><%= publisher[:name] %></option>
					<% end %>
				</select>
			</div>
		</div>
		<!--<div class="well">
			<div id="datetimepicker1" class="input-append date">
				<input data-format="dd/MM/yyyy hh:mm:ss" type="text"></input>
				<span class="add-on">
					<i data-time-icon="icon-time" data-date-icon="icon-calendar"> </i>
				</span>
			</div>
		</div>-->


		<div class="form-group">
			<label for="input_genre" class="col-sm-2 control-label">Genre</label>
			<div class="col-sm-10">
				<%#<input type="text" class="form-control" id="input_image_directory" placeholder="Image Directory">%>
				<% @genres.each do |genre| %>
					<label class="checkbox-inline">
						<input name="checkbox_<%= genre[:num] %>" type="checkbox" id="inlineCheckbox<%=genre[:num] %>" value="<%= genre[:name] %>"> <%= genre[:name] %>
					</label>
				<% end %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Add</button>
			</div>
		</div>
	</form>

</div><!-- /.container -->


