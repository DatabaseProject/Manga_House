<%= content_for :title do %>
	Manga House: Add New Chapter
<% end %>
<div class="container">

	<div class="my_header">
		<h1>New Chapter!</h1>
	</div>


	<form action="/chapters" method="post" class="form-horizontal" role="form">


		<div class="form-group">
			<label for="select_manga" class="col-sm-2 control-label">Manga</label>
			<div class="col-sm-10">
				<%#<input type="text" class="form-control" id="input_image_directory" placeholder="Image Directory">%>
				<select name="select_manga" id = "select_manga" name = "select_manga" class="form-control">
					<% @mangas.each do |manga| %>
						<option><%= manga[:name] %></option>
					<% end %>
				</select>
			</div>
		</div>


		<div class="form-group">
			<label for="input_name" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" name="input_name" class="form-control" id="input_name" placeholder="Name">
			</div>
		</div>

		<div class="form-group">
			<label for="input_number" class="col-sm-2 control-label">Number</label>
			<div class="col-sm-10">
				<input type="text" name="input_number" class="form-control" id="input_number" placeholder="Number">
			</div>
		</div>

		<div class="form-group">
			<label for="input_volumn" class="col-sm-2 control-label">Volumn</label>
			<div class="col-sm-10">
				<input type="text" name="input_volumn" class="form-control" id="input_volumn" placeholder="Volumn">
			</div>
		</div>



		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Add</button>
			</div>
		</div>
	</form>

</div><!-- /.container -->


