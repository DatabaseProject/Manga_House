<% content_for :title do %>
	MangaHouse
<% end %>

<div class="container">

	<div class="my_header">
		<h1> Welcome to Manga House!</h1>
	</div>

	<ul class="nav nav-tabs">
		<li class="active"><a href="#">New Release</a></li>
	</ul>
	<!-- Table -->
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Date</th>
				<th>Title</th>
				<th>Chapter</th>
				<th>Artist</th>
				<th>Author</th>
			</tr>
		</thead>
		<tbody>

			<% @data.each do |datum| %>
				<tr>
					<td> <%= datum[:date] %> </td>
					<td><a href="/manga/<%= datum[:manga_id] %>"> <%= datum[:title] %></a></td>
					<td> <%= datum[:chapter] %> </td>
					<td><a href="/artist/<%= datum[:artist_id] %>"> <%= datum[:artist] %> </a></td>
					<td><a href="/author/<%= datum[:author_id] %>"> <%= datum[:author] %> </a></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div><!-- /.container -->

