		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
		<![endif]-->
	</head>

	<body>

		<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#"><img src="img/navbar-logo.png"></a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li><!-- class="active"--> <a href="/">New Release</a></li>
						<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Informations <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><a href="#">Manga</a></li>
							<li><a href="#">Artist</a></li>
							<li><a href="#">Author</a></li>
						</ul>
						</li>
						<li><a href="#contact">About Us</a></li>
					</ul>

					<div class="btn-group" style="padding-top:15px;">
						<form class="input-group" method ="get" action = "/search" >
							<input type="hidden" name="search_type" id="quick_search" value="quick_search" />
							<input name = "word" type="text" class="form-control-sm"placeholder="Quick Search!...">
							<span class="input-group-btn">
								<button class="btn btn-default btn-xs" type="  submit">
									<span class="glyphicon glyphicon-search"></span>
								</button>
							</span>
						</form><!-- /input-group -->
					</div>
					<form class="navbar-form navbar-right"style="padding-top: 7px;" >

						<div class="form-group">
							<input placeholder="Email" class="form-control-sm"- type="text">
						</div>
						<div class="form-group">
							<input placeholder="Password" class="form-control-sm" type="password">
						</div>
						<button type="submit" class="btn btn-success btn-xs">Sign in</button>


					</form>
				</div><!--/.nav-collapse -->
			</div>
		</div>

		<div class="container">

			<div class="my_header">
				<h1> Welcome to Manga House!</h1>
			</div>

			<ul class="nav nav-tabs">
				<li class="active"><a href="#">New Release</a></li>
			</ul>
			<!-- Table -->
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Date</th>
						<th>Title</th>
						<th>Chapter</th>
						<th>Artist</th>
						<th>Author</th>
					</tr>
				</thead>
				<tbody>

					<% @data.each do |datum| %>
						<tr>
							<td> <%= datum[:date] %> </td>
							<td><a href="#"> <%= datum[:title] %></a></td>
							<td> <%= datum[:chapter] %> </td>
							<td><a href="#"> <%= datum[:artist] %> </a></td>
							<td><a href="#"> <%= datum[:author] %> </a></td>
						</tr>
					<% end %>
				</tbody>
			</table>



		</div><!-- /.container -->


		<!-- Bootstrap core JavaScript
		================================================== -->
