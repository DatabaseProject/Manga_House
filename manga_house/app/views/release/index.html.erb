		<title>Manga House: Home</title>

		<!-- Bootstrap core CSS -->
		<link href="http://getbootstrap.com/dist/css/bootstrap.css" rel="stylesheet">

		<!-- Custom styles for this template -->
		<link href="app/assets/stylesheets/starter-template.css" rel="stylesheet">

