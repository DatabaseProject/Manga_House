<%= content_for :title do %>
	Manga House: Artist Information
<% end %>

<div class="container">

	<div class="my_header">
		<h1><%= @artist_info[:first_name] + " " + @artist_info[:last_name] %></h1>
	</div>

	<div class="panel-body panel-defaul col-md-10 col-md-offset-1">

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><%= @artist_info[:first_name] + " " + @artist_info[:last_name] %></h3>
			</div>
			<div class="panel-body">

				<form class="form-horizontal col-md-9" role="form">
					<div class="form-group">
						<label class="col-sm-3 control-label"><%= @artist_info[:first_name] %></label>
						<div class="col-sm-9">
							<p type="text" class="control-label" style="text-align: left;" > Firstname </p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label"><%= @artist_info[:last_name] %></label>
						<div class="col-sm-9">
							<p type="text" class="control-label" style="text-align: left;" > Lastname </p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label"> birthday</label>
						<div class="col-sm-9">
							<p type="text" class="control-label" style="text-align: left;" > <%= @artist_info[:birthday] %></p>
						</div>
					</div>

					<div class="form-group">
						<label class="col-md-3 control-label">Release History</label>
						<div class="col-md-9">

							<table class="table table-condensed col-md-12">

								<thead>
									<tr>
										<th>Date</th>
										<th>Chapter</th> 
										<th>Manga Title</th> 
									</tr> 
								</thead>
								<tbody>

									<% @released_chapter.each do |ch| %>
										<tr> 
											<td><%= ch[:date] %></td> 
											<td><%= ch[:chapter] %></td> 
											<td> <a href="/mangas/<%= ch[:manga_id] %>"><%= ch[:manga_name] %></a></td>
										</tr> 
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</form>

				<%#<div class="col-md-3">%>
					<%#<img src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/c64.64.801.801/s160x160/1005183_10201665277297987_1641864171_n.jpg" class="img-responsive"  alt="profile_pic"/>%>
				<%#</div>%>

			</div>
		</div>


	</div><!-- /.container -->
